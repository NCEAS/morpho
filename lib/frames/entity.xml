<?xml version="1.0"?>
<wizard size="590x430" dtd="eml-entity.dtd" doctype="-//NCEAS//eml-entity-2.0//EN">
  <group label="Entity Information" field="table-entity" type="panel">
      <textbox label="identifier" size="10" visible="no" field="identifier" 
               required="yes"/>
      <textbox label="Name" field="entityName" size="10" required="yes"/>
      <textbox label="Description" field="entityDescription"  size="10" />
      <group field="@orientation" size="50x40">
        <combobox label="Orientation" field="columnrow"  size="10" defaulttext="columnmajor">
          <item name="Column Major" value="columnmajor"/>
          <item name="Row Major" value="rowmajor"/>
        </combobox>
      </group>
      
      <group field="@caseSensitive" size="50x40">
        <combobox label="Case Sensitive" field="yesorno" size="10" defaulttext="no">
          <item name="No" value="no" />
          <item name="Yes" value="yes"/>
        </combobox>
      </group>
      
      <textbox label="Number of Records"  size="10" field="numberOfRecords"/>

  </group>
</wizard>
