<?xml version="1.0"?>
<wizard size="300x400" dtd="eml-entity.dtd" doctype="-//NCEAS//eml-entity2.0//EN">
  <group label="Entity Information" field="table-entity" type="panel" size="290x200">
      
      <textbox label="identifier" size="10" visible="no" field="identifier" repeatable="yes" required="yes"/>
      <textbox label="Name" field="entityName" size="10" required="yes"/>
      <textbox label="Description" field="entityDescription"  size="10" />
      <group label="Coverages" type="panel" size="290x300">
      <!--<group repeatable="yes" field="abc" size="280x290">-->
        <group label="Temporal Coverage" field="temporalCov" repeatable="yes" size="50x170">
          <textbox size="10" label="dummy" field="dummy1"/>
          <textbox size="10" label="dummy" field="dummy2"/>
          <textbox size="10" label="dummy" field="dummy3"/>
        </group>
        <group label="Geographic Coverage" field="geographicCov" repeatable="yes" size="50x170">
          <textbox size="10" label="dummy" field="dummy1"/>
          <textbox size="10" label="dummy" field="dummy2"/>
          <textbox size="10" label="dummy" field="dummy3"/>
        </group>
        <group label="Taxonomic Coverage" field="taxonomicCov" repeatable="yes" size="50x170">
          <textbox size="10" label="dummy" field="dummy1"/>
          <textbox size="10" label="dummy" field="dummy2"/>
          <textbox size="10" label="dummy" field="dummy3"/>
        </group>
      <!--</group>-->
      </group>
      <group field="@orientation" size="50x40">
        <combobox label="Orientation" field="columnrow"  size="10" defaulttext="columnmajor">
          <item name="Column Major" value="columnmajor"/>
          <item name="Row Major" value="rowmajor"/>
        </combobox>
      </group>
      
      <group field="@casesSensitive" size="50x40">
        <combobox label="Case Sensitive" field="yesorno" size="10" defaulttext="no">
          <item name="No" value="no" />
          <item name="Yes" value="yes"/>
        </combobox>
      </group>
      
      <textbox label="Number of Records"  size="10" field="numberOfRecords"/>

  </group>
</wizard>
