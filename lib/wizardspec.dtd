<!ELEMENT wizard (group)>
<!ATTLIST wizard size (#PCDATA) <!--the size of the whole frame-->
                 dtd  (#PCDATA)><!--the dtd that this frame fulfills-->

<!ELEMENT group (group* | textbox* | combobox*)>
<!ATTLIST group label (#PCDATA) <!--the text label for the group-->
                field (#PCDATA) <!--the xml field that this group encompasses-->
                size  (#PCDATA) <!--the size (in pixels) in NxM form-->
                type  (panel | pathgrouping) "pathgrouping" 
                <!--a panel group will create a new tab in the tabbed pane,
                    a pathgrouping panel simply adds a new path to the nesting-->
                repeatable (yes  | no)  "no" <!--makes this panel repeatable-->
                layout     (flow | box) "box" <!--chooses the layout manager
                                                   for the contents of this 
                                                   panel. -->
                visible    (yes  | no)  "yes"> <!--make this group's panel invisible-->
<!ELEMENT textbox>
<!ATTLIST textbox label       (#PCDATA) <!--the label for the text box-->
                  field       (#PCDATA) <!--the field that the text box defines-->
                  size        (#PCDATA) <!--the number of columns that this 
                                            textbox should cover-->
                  defaulttext (#PCDATA) <!--the default text that should appear
                                            in the text box when it is created-->
                  editable    (yes | no) "yes" <!--tells whether the user can
                                                   edit the content of this 
                                                   textbox-->
                  repeatable  (yes | no) "no" <!--is this text box repeatable?-->
                  allowNull   (yes | no) "yes" <!--can this text box be left 
                                                    with empty content-->
                  visible     (yes | no) "yes"> <!--make this text box invisible--> 
                  
<!ELEMENT combobox (item+)>
<!ATTLIST combobox label       (#PCDATA)  <!--same as textbox fields-->
                   field       (#PCDATA)
                   size        (#PCDATA)
                   defaulttext (#PCDATA)
                   repeatable  (yes | no) "no"
                   allowNull   (yes | no) "yes">
                   
<!ELEMENT item (#PCDATA)>
<!ATTLIST item value (#PCDATA)> <!--the value of the item in the combobox-->

