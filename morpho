#!/bin/sh
#
# Shell script for launching morpho from unix systems
#
# '$RCSfile: morpho,v $'
# '$Author: brooke $'
# '$Date: 2003-09-24 05:07:42 $'
# '$Revision: 1.27 $'

if ! ls $JAVA_HOME/bin/ | grep -q java; then
 echo ----------------------------------------------------------------------
 echo ----------------------------------------------------------------------
 echo ---------------------------- N O T E ---------------------------------
 echo ---- YOU MUST SET THE JAVA_HOME ENVIRONMENT VARIABLE TO POINT TO -----
 echo --- YOUR JDK OR JRE INSTALLATION DIRECTORY BEFORE RUNNING MORPHO! ----
 echo ----- Note that Morpho may not work correctly with non-SUN JVMs, -----
 echo --------------------- such as gcj or kafee. --------------------------
 echo ----------------------------------------------------------------------
 echo ----------------------------------------------------------------------
 exit
fi



XMLP=./lib/xercesImpl.jar
API=./lib/xml-apis.jar
XALAN=./lib/xalan.jar
DMC=./lib/morpho.jar
#DMC=./build/morpho.jar
CFG=./lib/morpho-config.jar
#CFG=./build/morpho-config.jar
JHELP=./lib/jhall.jar
JLF=./lib/shippedIcons.jar
HELP=./lib/morphohelp.jar
HTP=./lib/httpclient.jar
ITS=./lib/itislib.jar
JSE=./lib/jsse.jar
JCE=./lib/jcert.jar
JNE=./lib/jnet.jar  
LAF=./lib/kunststoff.jar 
LMP=./lib/liveMap.jar 
UTL=./lib/utilities.jar

CPATH=.:$JAVA_HOME/jre/lib/rt.jar:$LMP:$XMLP:$API:$XALAN:$DMC:$CFG:$JLF:$HTP:$ITS:$JSE:$JCE:$JNE:$LAF:$UTL:$JHELP:$HELP
echo "----------------------------------"

$JAVA_HOME/bin/java -version

echo "----------------------------------"
$JAVA_HOME/bin/java -Xmx512m -Xss1m -cp $CPATH edu.ucsb.nceas.morpho.Morpho
