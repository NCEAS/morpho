#!/bin/sh
#
# Shell script for launching morpho from unix systems
#
# '$RCSfile: morpho,v $'
# '$Author: tao $'
# '$Date: 2002-10-26 00:02:36 $'
# '$Revision: 1.18 $'

XMLP=./lib/xercesImpl.jar
API=./lib/xmlParserAPIs.jar
XALAN=./lib/xalan.jar
# DMC=./lib/morpho.jar
DMC=./build/morpho.jar
# CFG=./lib/morpho-config.jar
CFG=./build/morpho-config.jar
JLF=./lib/shippedIcons.jar
HTP=./lib/httpclient.jar
ITS=./lib/itislib.jar
JSE=./lib/jsse.jar
JCE=./lib/jcert.jar
JNE=./lib/jnet.jar  
LAF=./lib/kunststoff.jar
CPATH=$XMLP:$API:$XALAN:$DMC:$CFG:$JLF:$HTP:$ITS:$JSE:$JCE:$JNE:$LAF
echo "----------------------------------"

java -version

echo "----------------------------------"
java -Xmx512m -Xss1m -cp $CPATH edu.ucsb.nceas.morpho.Morpho
