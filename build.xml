<?xml version="1.0"?>
<project name="dtclient" default="buildAll" basedir=".">
   <target name="init">
      <property name="classesdir" value="./classes" />
      <property name="libdir" value="./lib" />
      <property name="dtclient.home" value="edu/ucsb/nceas/dtclient" />
      <property name="metaedit.home" value="edu/ucsb/nceas/metaedit" />
      <property name="querybean.home" value="edu/ucsb/nceas/querybean" />
      <property name="src.dtclient.home" value="src/edu/ucsb/nceas/dtclient" />
      <property name="src.metaedit.home" value="src/edu/ucsb/nceas/metaedit" />
      <property name="src.querybean.home" value="src/edu/ucsb/nceas/querybean" />
      <property name="src.arbortext.home"  value="src/com/arbortext/catalog"  />
      <property name="src.sym.home.awt"  value="src/com/symantec/itools/awt"  />
      <property name="src.sym.home.swing"  value="src/com/symantec/itools/javax/swing"  />
      <mkdir dir="classes" />
   </target>
   
   <target name="compileCat" depends="init">
       <javac srcdir="${src.arbortext.home}" destdir="${classesdir}" />
   </target>

   <target name="compileSymAwt" depends="init">
       <javac srcdir="${src.sym.home.awt}" destdir="${classesdir}" />
   </target>
      
   <target name="compileSymSwing" depends="init">
       <javac srcdir="${src.sym.home.swing}" destdir="${classesdir}" />
   </target>

   <target name="compileQueryBean" depends="init">
       <javac srcdir="${src.querybean.home}" destdir="${classesdir}" classpath="lib/xerces.jar;lib/xalan.jar;lib/sym.jar;lib/catalog.jar" />
   </target>

   <target name="compileMdeBean" depends="init">
       <javac srcdir="${src.metaedit.home}" destdir="${classesdir}" classpath="lib/xml4j.jar;lib/xerces.jar;lib/sym.jar;lib/catalog.jar" />
       <copydir src="${src.metaedit.home}/images/" dest="${classesdir}/${metaedit.home}" />
  </target>

   <target name="compileClient" depends="init,compileCat,compileQueryBean,compileMdeBean">
       <javac srcdir="${src.dtclient.home}" destdir="${classesdir}" classpath="lib/xerces.jar;lib/xalan.jar;lib/sym.jar" /> 
       <copydir src="${src.dtclient.home}/images/" dest="${classesdir}/${dtclient.home}" />
   </target> 
 
   <target name="buildAll" depends="compileClient">
       <delete file="dmanclient.jar" />
       <jar jarfile="lib/dmanclient.jar" basedir="${classesdir}"  />
   </target>

   <target name="clean" depends="init">
       <delete file="lib/dmanclient.jar" />
       <deltree dir="${classesdir}" />
   </target>
</project>